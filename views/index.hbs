{{!-- When Candidate Login --}}
{{#if user.isCandidate}}
<div class="container-fluid firstSection">
	<div class="container" style="margin-top: 100px;">
		<div class="title">
			Find your <span class="grey-text">dream job</span> here
		</div>
		<p class="center" style="font-weight: 600;">
			Lorem ipsum dolor sit amet consectetur adipisicing elit. Laudantium incidunt earum veniam quas quod
			pariatur, eos cupiditate aspernatur accusamus dolor.
		</p>
	</div>
	<nav class="container white z-depth-1-half searchBar" style="margin-top: 30px;">
		<div class="nav-wrapper">
			<form>
				<div class="input-field">
					<input id="search" placeholder="Search a job..." type="search" required>
					<label class="label-icon" for="search"><i class="material-icons black-text">search</i></label>

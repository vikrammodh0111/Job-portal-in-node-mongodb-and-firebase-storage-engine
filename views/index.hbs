</div>
{{#if joblength}}
<div class="row container" style="margin-top: 50px;">
	{{#each jobs}}
	<div class="col s12 l4">
		<div class="card">
			<div class="z-depth-1">
				<div class="card-image blue lighten-3" style="height: 100px;">
					<a href="/about-this-job/{{this.id}}" class="black-text">
						<span class="card-title">{{this.jobTitle}}</span>
					</a>
				</div>
				<div class="card-content">
					<p style="color: grey; font-size: 1.2em; margin-bottom: 10px;">{{this.companyName}}</p>
					<p style="margin-top: 10px;"><i class="material-icons left">
							business_center
						</i> <span class="grey-text">{{this.jobType}}</span></p>
					<p style="margin-top: 10px;"><i class="material-icons left">location_on</i> <span
							class="grey-text">{{this.jobLocation}}</span></p>
					<p style="margin-top: 10px;"><i class="material-icons left">sports_handball
						</i> <span class="grey-text">{{this.skill}}</span>
						<p style="margin-top: 10px;">Starting salary :- <span class="grey-text">â‚¹
								{{this.salaryStart}}
								/-</span></p>
					</p>
				</div>
				<div class="card-action">
					<a href="/about-this-job/{{this.id}}">Apply Here</a>
				</div>
			</div>
		</div>
	</div>
	{{/each}}
</div>
{{/if}}
